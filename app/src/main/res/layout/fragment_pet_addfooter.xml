<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_pet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字:"/>

            <TextView
                android:id="@+id/fragment_pet_name"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="可可"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主人:"/>

            <TextView
                android:id="@+id/fragment_pet_zhuren"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="可可"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话:"/>

            <TextView
                android:id="@+id/fragment_pet_phone"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="可可"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小区:"/>

            <TextView
                android:id="@+id/fragment_pet_xiaoqu"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="可可"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态:"/>

            <TextView
                android:id="@+id/fragment_pet_zhuangtai"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="可可"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_pet_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_pet_layout"
        android:scrollbars="none"/>

</RelativeLayout>
