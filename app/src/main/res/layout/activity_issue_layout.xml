<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_pet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字:" />

            <TextView
                android:id="@+id/fragment_pet_name"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="可可" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态:" />

            <TextView
                android:id="@+id/fragment_pet_zhuangtai"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="正常" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="悬赏:" />

            <EditText
                android:id="@+id/activity_issue_xuanshang"
                style="@style/PetTextStyle"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="1600" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机:" />

            <TextView
                android:id="@+id/fragment_pet_phone"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="1331331" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述:" />

            <EditText
                android:id="@+id/activity_issue_miaoshu"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="添加描述" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丢失时间:" />

            <TextView
                android:id="@+id/fragment_pet_time"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="2017/07/14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丢失地址:" />

            <EditText
                android:id="@+id/fragment_pet_zhuzhi"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="可可" />

        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_pet_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_pet_layout"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_pet_rv"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/c_8899a6"
            android:padding="20dp"
            android:text="发布" />

        <TextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@color/c_8899a6"
            android:padding="20dp"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>
