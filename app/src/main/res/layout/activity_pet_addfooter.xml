<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_pet_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_pet_layout"
        android:layout_marginTop="10dp"
        android:scrollbars="none" />

    <LinearLayout android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_pet_rv"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="修改悬赏" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:padding="20dp"
            android:text="取消悬赏" />
    </LinearLayout>

    <Button android:id="@+id/lianxizhuren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_pet_rv"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="联系主人"/>

    <LinearLayout
        android:id="@+id/fragment_pet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字:" />

            <TextView
                android:id="@+id/fragment_pet_name"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态:" />

            <TextView
                android:id="@+id/fragment_pet_zhuangtai"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="悬赏:" />

            <TextView
                android:id="@+id/activity_issue_xuanshang"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/red"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机:" />

            <TextView
                android:id="@+id/fragment_pet_phone"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述:" />

            <TextView
                android:id="@+id/activity_issue_miaoshu"
                style="@style/PetTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丢失时间:" />

            <TextView
                android:id="@+id/fragment_pet_time"
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/PetTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丢失地址:" />

            <TextView
                android:id="@+id/fragment_pet_zhuzhi"
                style="@style/PetTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
